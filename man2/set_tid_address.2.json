        {
          "type": "MACRO_INLINE",
          "content": ".IR",
          "translatable": false
        },
        {
          "type": "TEXT",
          "content": " clear_child_tid ."
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "These two attributes contain the value NULL by default."
        }
      ]
    ]
  },
