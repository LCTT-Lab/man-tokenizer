  },
  {
    "type": "content",
    "lines": [
      [
        {
          "type": "TEXT",
          "content": "When a thread whose"
        }
      ],
      [
        {
          "type": "MACRO_INLINE",
          "content": ".I",
          "translatable": false
        },
        {
          "type": "TEXT",
          "content": " clear_child_tid"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "is not NULL terminates, then,"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "if the thread is sharing memory with other threads,"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "then 0 is written at the address specified in"
        }
      ],
      [
        {
          "type": "MACRO_INLINE",
          "content": ".I",
          "translatable": false
        },
        {
          "type": "TEXT",
          "content": " clear_child_tid"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "and the kernel performs the following operation:"
        }
      ]
