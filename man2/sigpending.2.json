        },
        {
          "type": "TEXT",
          "content": " sigpending ()"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "returns 0 on success and "
        },
        {
          "type": "ESCAPE",
          "content": "\\-"
        },
        {
          "type": "TEXT",
          "content": "1 on error."
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "In the event of an error,"
        }
