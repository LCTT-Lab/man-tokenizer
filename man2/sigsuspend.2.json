        },
        {
          "type": "TEXT",
          "content": " sigsuspend ()"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "is used in conjunction with"
        }
      ],
      [
        {
          "type": "MACRO_INLINE",
          "content": ".BR",
          "translatable": false
        },
        {
          "type": "TEXT",
          "content": " sigprocmask (2)"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "in order to prevent delivery of a signal during the execution of a"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "critical code section."
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "The caller first blocks the signals with"
        }
      ],
