      [
        {
          "type": "MACRO_INLINE",
          "content": ".BR",
          "translatable": false
        },
        {
          "type": "TEXT",
          "content": " sigsuspend ()"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "temporarily replaces the signal mask of the calling thread with the"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "mask given by"
        }
      ],
      [
        {
          "type": "MACRO_INLINE",
