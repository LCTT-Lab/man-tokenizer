    ]
  },
  {
    "type": "content",
    "lines": [
      [
        {
          "type": "TEXT",
          "content": "If the signal terminates the process, then"
        }
      ],
      [
        {
          "type": "MACRO_INLINE",
          "content": ".BR",
          "translatable": false
        },
        {
          "type": "TEXT",
          "content": " sigsuspend ()"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "does not return."
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "If the signal is caught, then"
        }
      ],
      [
        {
          "type": "MACRO_INLINE",
          "content": ".BR",
          "translatable": false
        },
        {
          "type": "TEXT",
          "content": " sigsuspend ()"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "returns after the signal handler returns,"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "and the signal mask is restored to the state before the call to"
        }
      ],
      [
        {
          "type": "MACRO_INLINE",
          "content": ".BR",
          "translatable": false
        },
        {
          "type": "TEXT",
          "content": " sigsuspend ()."
        }
      ]
    ]
  },
