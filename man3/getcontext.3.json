        {
          "type": "TEXT",
          "content": "and"
        }
      ],
      [
        {
          "type": "MACRO_INLINE",
          "content": ".BR",
          "translatable": false
        },
        {
          "type": "TEXT",
          "content": " swapcontext (3)"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "that allow user-level context switching between multiple"
        }
