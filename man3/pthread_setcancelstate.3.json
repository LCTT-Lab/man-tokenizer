        }
      ],
      [
        {
          "type": "TEXT",
          "content": "POSIX.1-2001 and POSIX.1-2008 require only that"
        }
      ],
      [
        {
          "type": "MACRO_INLINE",
          "content": ".BR",
          "translatable": false
        },
        {
          "type": "TEXT",
          "content": " pthread_cancel (3),"
