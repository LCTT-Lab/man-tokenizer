        {
          "type": "MACRO_INLINE",
          "content": ".BR",
          "translatable": false
        },
        {
          "type": "TEXT",
          "content": " realloc (3),"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "and"
        }
      ],
      [
        {
          "type": "MACRO_INLINE",
          "content": ".BR",
          "translatable": false
        },
        {
          "type": "TEXT",
          "content": " free (3)"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "by specifying appropriate hook functions."
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "You can use these hooks"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "to help you debug programs that use dynamic memory allocation,"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "for example."
        }
