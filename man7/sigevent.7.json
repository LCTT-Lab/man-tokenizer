  {
    "type": "content",
    "lines": [
      [
        {
          "type": "TEXT",
          "content": "union sigval {          /* Data passed with notification */"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "    int     sival_int;         /* Integer value */"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "    void   *sival_ptr;         /* Pointer value */"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "};"
        }
      ]
    ]
  },
  {
    "type": "macro",
    "lines": [
      [
        {
          "type": "MACRO_BLOCK",
          "content": ".PP",
          "translatable": false
        }
      ]
    ]
  },
  {
    "type": "content",
    "lines": [
      [
        {
          "type": "TEXT",
          "content": "struct sigevent {"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "    int          sigev_notify; /* Notification method */"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "    int          sigev_signo;  /* Notification signal */"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "    union sigval sigev_value;  /* Data passed with"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "                                  notification */"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "    void       (*sigev_notify_function) (union sigval);"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "                     /* Function used for thread"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "                        notification (SIGEV_THREAD) */"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "    void        *sigev_notify_attributes;"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "                     /* Attributes for notification thread"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "                        (SIGEV_THREAD) */"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "    pid_t        sigev_notify_thread_id;"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "                     /* ID of thread to signal (SIGEV_THREAD_ID) */"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "};"
        }
      ]
    ]
  },
