        {
          "type": "TEXT",
          "content": " si_value"
        }
      ],
      [
        {
          "type": "TEXT",
          "content": "This field is set to the value specified in"
        }
      ],
      [
        {
          "type": "MACRO_INLINE",
          "content": ".IR",
          "translatable": false
        },
        {
          "type": "TEXT",
          "content": " sigev_value ."
        }
      ]
    ]
  },
  {
    "type": "macro",
    "lines": [
      [
        {
          "type": "MACRO_BLOCK",
          "content": ".RE",
